<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Account_Fragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <Button
           android:id="@+id/button3"
           android:layout_width="295dp"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="152dp"
           android:background="@drawable/button_border"
           android:paddingLeft="25dp"
           android:paddingRight="25dp"
           android:text="Discover Nearby Friends"
           android:textAllCaps="false"
           android:textColor="@android:color/white"
           android:textSize="16sp"
           android:textStyle="bold" />

       <RelativeLayout
           android:id="@+id/rel1"
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:background="@drawable/gradient_blue">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/profile_photo"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="14dp"
               android:src="@drawable/coins"
               app:civ_border_color="#ffffff"
               app:civ_border_width="1dp" />

           <TextView
               android:id="@+id/name_age_account"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="55dp"
               android:textColor="@android:color/white"
               android:textStyle="bold" />

           <ImageView
               android:id="@+id/edit_profile"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_alignParentEnd="true"
               android:layout_below="@+id/profile_photo"
               android:layout_marginEnd="96dp"
               android:src="@drawable/editprofileicon" />

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@+id/rel1">

           <RelativeLayout
               android:id="@+id/rel2"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="35dp">

               <ImageView
                   android:id="@+id/imageView3"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="17dp"
                   android:layout_marginStart="17dp"
                   android:src="@drawable/prefences" />

               <TextView
                   android:id="@+id/textView7"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginLeft="78dp"
                   android:layout_marginStart="78dp"
                   android:layout_marginTop="13dp"
                   android:text="My Preferences"
                   android:textColor="@android:color/black"
                   android:textSize="16sp" />

               <TextView
                   android:id="@+id/textView12"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignLeft="@+id/textView7"
                   android:layout_alignStart="@+id/textView7"
                   android:layout_below="@+id/textView7"
                   android:text="Choose who you'd like to cross path with" />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/seprator1"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/rel2"
               android:background="@android:color/darker_gray"
               tools:ignore="NotSibling">

           </RelativeLayout>

           <RelativeLayout
               android:id="@id/rel3"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/seprator1">

               <ImageView
                   android:id="@+id/imageView5"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="21dp"
                   android:layout_marginStart="21dp"
                   android:src="@drawable/star" />

               <TextView
                   android:id="@+id/textView16"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginLeft="81dp"
                   android:layout_marginStart="81dp"
                   android:layout_marginTop="13dp"
                   android:text="Favorites bees"
                   android:textColor="@android:color/black"
                   android:textSize="16sp" />

               <TextView
                   android:id="@+id/textView18"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignBottom="@+id/imageView5"
                   android:layout_alignLeft="@+id/textView16"
                   android:layout_alignStart="@+id/textView16"
                   android:text="Find the people who waved to you" />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/seprator2"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/rel3"
               android:background="@android:color/darker_gray"
               tools:ignore="NotSibling">

           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/rel4"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/seprator2">

               <ImageView
                   android:id="@+id/imageView6"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="21dp"
                   android:layout_marginStart="21dp"
                   android:src="@drawable/invitefriends" />

               <TextView
                   android:id="@+id/textView19"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginLeft="81dp"
                   android:layout_marginStart="81dp"
                   android:layout_marginTop="11dp"
                   android:text="Invite Friends"
                   android:textColor="@android:color/black"
                   android:textSize="16sp" />

               <TextView
                   android:id="@+id/textView20"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignBottom="@+id/imageView6"
                   android:layout_alignLeft="@+id/textView19"
                   android:layout_alignStart="@+id/textView19"
                   android:text="invite your friends" />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/seprator3"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/rel4"
               android:background="@android:color/darker_gray"
               tools:ignore="NotSibling">

           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/rel5"
               android:layout_width="match_parent"
               android:layout_height="78dp"
               android:layout_below="@+id/seprator3">

               <ImageView
                   android:id="@+id/imageView7"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="23dp"
                   android:layout_marginStart="23dp"
                   android:src="@drawable/ic_action_setting" />

               <TextView
                   android:id="@+id/textView21"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginLeft="81dp"
                   android:layout_marginStart="81dp"
                   android:layout_marginTop="16dp"
                   android:text="App Settings"
                   android:textColor="@android:color/black"
                   android:textSize="16sp" />

               <TextView
                   android:id="@+id/textView22"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignLeft="@+id/textView21"
                   android:layout_alignStart="@+id/textView21"
                   android:layout_below="@+id/textView21"
                   android:text="Manage your notification ,connected accounts" />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/seprator4"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/rel5"
               android:background="@android:color/darker_gray"
               tools:ignore="NotSibling">

           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/rel6"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_below="@+id/seprator4"
               android:layout_marginBottom="10dp">

               <ImageView
                   android:id="@+id/imageView8"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_centerVertical="true"
                   android:layout_marginStart="21dp"
                   android:src="@drawable/ic_action_help"
                   android:tint="@android:color/holo_blue_bright" />

               <TextView
                   android:id="@+id/textView23"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_alignTop="@+id/imageView8"
                   android:layout_marginStart="79dp"
                   android:text="Need help?"
                   android:textColor="@android:color/black"
                   android:textSize="16sp" />

               <TextView
                   android:id="@+id/textView24"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignStart="@+id/textView23"
                   android:layout_below="@+id/textView23"
                   android:text="contact us" />
           </RelativeLayout>
       </RelativeLayout>
   </RelativeLayout>

</android.support.v4.widget.NestedScrollView>